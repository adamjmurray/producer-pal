{
  "dxt_version": "0.1",
  "name": "Producer Pal",
  "version": "0.9.0",
  "description": "AI music production assistant for Ableton Live. Control transport, create clips, manage tracks and scenes directly from Claude.",
  "long_description": "TODO: supports basic markdown here",
  "author": {
    "name": "Adam Murray",
    "email": "adam@adammurray.link",
    "url": "https://adammurray.link"
  },
  "homepage": "https://adammurray.link/producer-pal",
  "documentation": "https://adammurray.link/producer-pal/docs",
  "support": "https://adammurray.link/producer-pal/faq",
  "icon": "icon.png",
  "screenshots": [
    "screenshot.png",
    "screenshot2.png"
  ],
  "server": {
    "type": "node",
    "entry_point": "server.js",
    "mcp_config": {
      "command": "node",
      "args": [
        "${__dirname}/server.js"
      ],
      "env": {}
    }
  },
  "tools": [
    {
      "name": "read-song",
      "description": "TODO: list the rest and make this all dynamic"
    }
  ],
  "prompts": [
    {
      "name": "prompt",
      "description": "TODO: this is just a placeholder example for now",
      "arguments": [
        "arg1",
        "arg2"
      ],
      "text": "prompt text goes here: ${arguments.arg1}, ${arguments.arg2}"
    }
  ],
  "compatibility": {
    "platforms": [
      "darwin",
      "win32"
    ],
    "runtimes": {
      "node": ">=18.0.0"
    }
  },
  "user_config": {
    "port": {
      "type": "number",
      "title": "Communication Port",
      "description": "Port number for the connection to the Producer Pal Max for Live Device",
      "required": false,
      "sensitive": false,
      "default": 3350,
      "min": 1024,
      "max": 9999
    }
  },
  "keywords": [
    "music",
    "ableton live",
    "ableton",
    "production",
    "producer",
    "composition",
    "composer",
    "assistant",
    "pal"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/adamjmurray/producer-pal"
  }
}