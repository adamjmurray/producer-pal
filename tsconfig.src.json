{
  "compilerOptions": {
    "checkJs": true,
    "noEmit": true,
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": false,
    "noImplicitAny": false
  },
  "include": ["src/**/*.js", "src/types/**/*.d.ts"],
  "exclude": ["src/**/*.test.js", "src/test/**", "src/**/*-test-helpers.js"]
}
