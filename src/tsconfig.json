{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "#src/*": ["./*"]
    },
    "checkJs": true,
    "noEmit": true,
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": false,
    "noImplicitAny": false
  },
  "include": ["**/*.js", "types/**/*.d.ts"],
  "exclude": ["**/*.test.js", "test/**", "**/*-test-helpers.js"]
}
