#!/usr/bin/env bash
# Run all eval scenarios sequentially
#
# Usage: ./scripts/run-evals

set -e

MODEL="gpt-5.2"
JUDGE="gpt-5-mini

SCENARIOS=(
  "connect-to-ableton"
  "create-and-edit-clip"
  "track-and-device-workflow"
  "project-notes-workflow"
  "duplicate-and-transform"
)

echo "Running ${#SCENARIOS[@]} eval scenarios..."
echo ""

for scenario in "${SCENARIOS[@]}"; do
  echo "━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━"
  echo "Running: $scenario"
  echo "━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━"
  scripts/eval -m "$MODEL" -j "$JUDGE" -q -t "$scenario"
  echo ""
done

echo "All scenarios completed."
