{
  "name": "producer-pal",
  "version": "1.3.5",
  "description": "Producer Pal - AI assistant for music composition inside Ableton Live using an MCP server in a Max for Live device",
  "homepage": "https://producer-pal.org",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adamjmurray/producer-pal.git"
  },
  "type": "module",
  "imports": {
    "#webui/*": "./webui/src/*",
    "#src/*": "./src/*"
  },
  "author": "Adam Murray",
  "license": "MIT License",
  "engines": {
    "node": ">=24"
  },
  "keywords": [
    "music",
    "ai",
    "mcp",
    "ableton"
  ],
  "scripts": {
    "build": "npm run parser:build && npm run ui:build && rollup -c config/rollup.config.mjs && npm run dxt:build",
    "build:all": "ENABLE_RAW_LIVE_API=true npm run build",
    "build:watch": "npm run build && rollup -c config/rollup.config.mjs -w",
    "dev": "ENABLE_RAW_LIVE_API=true rollup -c config/rollup.config.mjs -w",
    "test": "npm run test:setup && vitest run -c config/vitest.config.ts --reporter=./config/vitest-minimal-reporter.mjs --silent",
    "test:watch": "npm run test:setup && vitest -c config/vitest.config.ts --reporter=dot --silent",
    "test:coverage": "npm run test:setup && vitest run --coverage -c config/vitest.config.ts --reporter=./config/vitest-minimal-reporter.mjs --silent",
    "test:verbose": "npm run test:setup && vitest run -c config/vitest.config.ts --reporter=default --silent",
    "test:coverage:verbose": "npm run test:setup && vitest run --coverage -c config/vitest.config.ts --reporter=default --silent",
    "test:setup": "npm run parser:build",
    "coverage": "npm run test:coverage",
    "check": "npm run lint --silent && npm run typecheck --silent && npm run format:check --silent && npm run validate:typescript-only --silent && npm run duplication --silent && npm run test:coverage --silent",
    "fix": "npm run lint:fix && npm run format",
    "parser:build": "peggy --format es --output src/notation/barbeat/parser/barbeat-parser.js src/notation/barbeat/parser/barbeat-grammar.peggy && peggy --format es --output src/notation/modulation/parser/modulation-parser.js src/notation/modulation/parser/modulation-grammar.peggy",
    "parser:watch": "chokidar 'src/**/*.peggy' -c 'npm run parser:build'",
    "format": "prettier --config config/prettier.config.mjs --ignore-path config/.prettierignore --write .",
    "format:check": "prettier --config config/prettier.config.mjs --ignore-path config/.prettierignore --check .",
    "lint": "echo 'Linting...' && eslint --config config/eslint.config.js --concurrency=auto . && echo 'No lint violations.\n'",
    "lint:fix": "npm run lint -- --fix",
    "duplication": "npm run duplication:src --silent && npm run duplication:tests --silent && npm run duplication:scripts --silent",
    "duplication:src": "printf 'Source ' && jscpd -s -c config/.jscpd.json",
    "duplication:tests": "printf 'Tests ' && jscpd -s -c config/.jscpd-tests.json",
    "duplication:scripts": "printf 'Scripts ' && jscpd -s -c config/.jscpd-scripts.json",
    "duplication:verbose": "jscpd -c config/.jscpd.json && jscpd -c config/.jscpd-tests.json && jscpd -c config/.jscpd-scripts.json",
    "loc": "cloc --vcs=git --not-match-f='package-lock.json|-parser\\.js$'",
    "knowledge-base": "npm run test:coverage && node scripts/generate-knowledge-base.ts",
    "kb": "npm run knowledge-base",
    "kb:chatgpt": "npm run knowledge-base -- --concat",
    "kb:small": "npm run knowledge-base -- --exclude-groups=third-party-licenses,src--tests,src--notation--tests,src--tools--tests,webui--test.ts",
    "dxt:clean": "rm -f claude-desktop-extension/*.mcpb claude-desktop-extension/*.js claude-desktop-extension/manifest.json claude-desktop-extension/LICENSE",
    "dxt:build": "node scripts/build-claude-desktop-extension.ts",
    "version:bump": "node scripts/bump-version.ts",
    "version:bump:minor": "node scripts/bump-version.ts minor",
    "version:bump:major": "node scripts/bump-version.ts major",
    "release": "node scripts/prepare-release.ts",
    "tc": "npm run typecheck",
    "typecheck": "echo 'Typechecking...' && npm run typecheck:src --silent && npm run typecheck:scripts --silent && npm run typecheck:webui --silent && echo 'No typecheck violations.\n'",
    "typecheck:src": "tsc --project src/tsconfig.json",
    "typecheck:scripts": "tsc --project scripts/tsconfig.json",
    "typecheck:webui": "tsc --project webui/tsconfig.json && tsc --project tests/webui/tsconfig.json",
    "ui:build": "vite build --config config/vite.config.ts",
    "ui:dev": "ENABLE_RAW_LIVE_API=true vite --config config/vite.config.ts",
    "ui:test": "node --env-file=.env node_modules/.bin/playwright test -c config/playwright.ui.config.ts",
    "ui:test:dev": "node --env-file=.env node_modules/.bin/playwright test -c config/playwright.ui.config.ts --ui",
    "ui:test:headed": "node --env-file=.env node_modules/.bin/playwright test -c config/playwright.ui.config.ts --headed",
    "validate:typescript-only": "node scripts/validate-typescript-only.ts",
    "docs:dev": "vitepress dev docs --port 5174",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "docs:test": "npm run docs:build && playwright test -c config/playwright.docs.config.ts",
    "docs:test:dev": "npm run docs:build && playwright test -c config/playwright.docs.config.ts --ui",
    "docs:test:headed": "npm run docs:build && playwright test -c config/playwright.docs.config.ts --headed"
  },
  "dependencies": {
    "@google/genai": "^1.37.0",
    "@modelcontextprotocol/sdk": "^1.25.2",
    "@tailwindcss/typography": "^0.5.19",
    "express": "^5.2.1",
    "marked": "^17.0.1",
    "openai": "^6.16.0",
    "preact": "^10.28.2",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@anthropic-ai/mcpb": "^2.1.2",
    "@eslint-community/eslint-plugin-eslint-comments": "^4.6.0",
    "@playwright/test": "^1.57.0",
    "@preact/preset-vite": "^2.10.2",
    "@rollup/plugin-alias": "^6.0.0",
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-replace": "^6.0.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@stylistic/eslint-plugin": "^5.7.0",
    "@tailwindcss/vite": "^4.1.18",
    "@testing-library/preact": "^3.2.4",
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.9",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "@vitest/coverage-v8": "^4.0.17",
    "@vitest/eslint-plugin": "^1.6.6",
    "chokidar-cli": "^3.0.0",
    "commander": "^14.0.2",
    "eslint": "^9.39.2",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-node": "^0.3.9",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsdoc": "^62.2.0",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-sonarjs": "^3.0.5",
    "eslint-plugin-unicorn": "^62.0.0",
    "happy-dom": "^20.3.4",
    "jscpd": "^4.0.7",
    "peggy": "^5.0.6",
    "prettier": "^3.8.0",
    "rollup": "^4.55.2",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-esbuild": "^6.2.1",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vite-plugin-singlefile": "^2.3.0",
    "vitepress": "^1.6.4",
    "vitest": "^4.0.17"
  }
}
