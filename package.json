{
  "name": "ableton-live-composition-assistant",
  "version": "1.0.0",
  "description": "AI assistant for music composition inside Ableton Live using an MCP server in a Max for Live device",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adamjmurray/ableton-live-composition-assistant.git"
  },
  "homepage": "https://github.com/adamjmurray/ableton-live-composition-assistant#readme",
  "keywords": [],
  "author": "Adam Murray",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.11.0",
    "@types/express": "^5.0.1",
    "@types/max-api": "^2.0.3",
    "@types/node": "^22.15.3",
    "chokidar-cli": "^3.0.0",
    "express": "^5.1.0",
    "peggy": "^5.0.0",
    "vitest": "^3.1.2",
    "zod": "^3.24.3"
  },
  "prettier": {
    "printWidth": 120,
    "proseWrap": "always"
  },
  "scripts": {
    "build": "npm run parser:build",
    "test": "npm run build && vitest run",
    "test:watch": "npm run build && vitest",
    "parser:build": "peggy --format commonjs --output device/tone-lang-parser.js device/tone-lang.pegjs",
    "parser:watch": "chokidar device/tone-lang.pegjs -c 'npm run parser:build'"
  }
}