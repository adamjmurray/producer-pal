{
  "name": "ableton-live-composition-assistant",
  "version": "1.0.0",
  "description": "AI assistant for music composition inside Ableton Live using an MCP server in a Max for Live device",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adamjmurray/ableton-live-composition-assistant.git"
  },
  "homepage": "https://github.com/adamjmurray/ableton-live-composition-assistant#readme",
  "keywords": [],
  "author": "Adam Murray",
  "license": "Personal Use License",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.13.0",
    "express": "^5.1.0",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-replace": "^6.0.2",
    "@rollup/plugin-terser": "^0.4.4",
    "@types/express": "^5.0.3",
    "@types/max-api": "^2.0.3",
    "@types/node": "^24.0.4",
    "@vitest/coverage-v8": "^3.2.4",
    "chokidar-cli": "^3.0.0",
    "peggy": "^5.0.4",
    "prettier": "^3.5.3",
    "rollup": "^4.44.0",
    "vitest": "^3.2.4"
  },
  "prettier": {
    "proseWrap": "always"
  },
  "scripts": {
    "build": "npm run parser:build && rollup -c",
    "build:all": "ENABLE_RAW_LIVE_API=true npm run parser:build && ENABLE_RAW_LIVE_API=true rollup -c",
    "dev": "ENABLE_RAW_LIVE_API=true rollup -c -w",
    "test": "npm run test:setup && vitest run",
    "test:watch": "npm run test:setup && vitest",
    "test:coverage": "npm run test:setup && vitest run --coverage",
    "test:setup": "npm run parser:build",
    "parser:build": "peggy --format es --output src/notation/barbeat/barbeat-parser.js src/notation/barbeat/barbeat-grammar.peggy",
    "parser:watch": "chokidar 'src/**/*.peggy' -c 'npm run parser:build'",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "claude:project": "npm run test:coverage && node tools/generate-claude-project.mjs"
  }
}
