{
  "name": "ableton-live-composition-assistant",
  "version": "1.0.0",
  "description": "AI assistant for music composition inside Ableton Live using an MCP server in a Max for Live device",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adamjmurray/ableton-live-composition-assistant.git"
  },
  "homepage": "https://github.com/adamjmurray/ableton-live-composition-assistant#readme",
  "keywords": [],
  "author": "Adam Murray",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.11.4",
    "express": "^5.1.0",
    "zod": "^3.25.7"
  },
  "devDependencies": {
    "@types/express": "^5.0.2",
    "@types/max-api": "^2.0.3",
    "@types/node": "^22.15.19",
    "@vitest/coverage-v8": "^3.1.4",
    "chokidar-cli": "^3.0.0",
    "peggy": "^5.0.2",
    "rollup": "^4.41.0",
    "vitest": "^3.1.4"
  },
  "prettier": {
    "printWidth": 120,
    "proseWrap": "always"
  },
  "scripts": {
    "build": "npm run parser:build && rollup -c",
    "dev": "rollup -c -w",
    "test": "npm run build && vitest run",
    "test:watch": "npm run build && vitest",
    "test:coverage": "npm run build && vitest run --coverage",
    "parser:build": "peggy --format es --output src/tone-lang-parser.js src/tone-lang-grammar.pegjs",
    "parser:watch": "chokidar src/tone-lang-grammar.pegjs -c 'npm run parser:build'"
  }
}