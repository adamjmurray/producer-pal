{
  "name": "producer-pal",
  "version": "1.3.3",
  "description": "Producer Pal - AI assistant for music composition inside Ableton Live using an MCP server in a Max for Live device",
  "homepage": "https://producer-pal.org",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adamjmurray/producer-pal.git"
  },
  "type": "module",
  "imports": {
    "#webui/*": "./webui/src/*",
    "#src/*": "./src/*"
  },
  "author": "Adam Murray",
  "license": "MIT License",
  "engines": {
    "node": "^24.0.0"
  },
  "keywords": [
    "music",
    "ai",
    "mcp",
    "ableton"
  ],
  "scripts": {
    "build": "npm run parser:build && npm run ui:build && rollup -c config/rollup.config.mjs && npm run dxt:build",
    "build:all": "ENABLE_RAW_LIVE_API=true npm run build",
    "build:watch": "npm run build && rollup -c config/rollup.config.mjs -w",
    "dev": "ENABLE_RAW_LIVE_API=true rollup -c config/rollup.config.mjs -w",
    "test": "npm run test:setup && vitest run -c config/vitest.config.mjs --reporter=dot --silent",
    "test:watch": "npm run test:setup && vitest -c config/vitest.config.mjs --reporter=dot --silent",
    "test:coverage": "npm run test:setup && vitest run --coverage -c config/vitest.config.mjs --reporter=dot --silent",
    "test:setup": "npm run parser:build",
    "coverage": "npm run test:coverage",
    "check": "npm run lint && npm run typecheck && npm run format:check && npm run test:coverage",
    "fix": "npm run format && npm run lint:fix",
    "parser:build": "peggy --format es --output src/notation/barbeat/parser/barbeat-parser.js src/notation/barbeat/parser/barbeat-grammar.peggy && peggy --format es --output src/notation/modulation/parser/modulation-parser.js src/notation/modulation/parser/modulation-grammar.peggy",
    "parser:watch": "chokidar 'src/**/*.peggy' -c 'npm run parser:build'",
    "format": "prettier --config config/prettier.config.mjs --ignore-path config/.prettierignore --write .",
    "format:check": "prettier --config config/prettier.config.mjs --ignore-path config/.prettierignore --check .",
    "lint": "eslint --config config/eslint.config.js .",
    "lint:fix": "npm run lint -- --fix",
    "loc": "cloc --vcs=git config dev-docs claude-desktop-extension max-for-live-device npm scripts src tests webui docs",
    "knowledge-base": "npm run test:coverage && node scripts/generate-knowledge-base.mjs",
    "kb": "npm run knowledge-base",
    "kb:chatgpt": "npm run knowledge-base -- --concat",
    "kb:small": "npm run knowledge-base -- --exclude-groups=src--tests,src--notation--tests,src--tools--tests,webui--test.ts",
    "dxt:clean": "rm -f claude-desktop-extension/*.mcpb claude-desktop-extension/*.js claude-desktop-extension/manifest.json claude-desktop-extension/LICENSE",
    "dxt:build": "node scripts/build-claude-desktop-extension.mjs",
    "version:bump": "node scripts/bump-version.mjs",
    "version:bump:minor": "node scripts/bump-version.mjs minor",
    "version:bump:major": "node scripts/bump-version.mjs major",
    "release": "node scripts/prepare-release.mjs",
    "tc": "npm run typecheck",
    "typecheck": "npm run ui:typecheck",
    "ui:build": "vite build --config config/vite.config.mjs",
    "ui:dev": "ENABLE_RAW_LIVE_API=true vite --config config/vite.config.mjs",
    "ui:typecheck": "node scripts/validate-webui-extensions.mjs && tsc --project webui/tsconfig.json && tsc --project tests/webui/tsconfig.json",
    "ui:test": "node --env-file=.env node_modules/.bin/playwright test -c config/playwright.ui.config.mjs",
    "ui:test:dev": "node --env-file=.env node_modules/.bin/playwright test -c config/playwright.ui.config.mjs --ui",
    "ui:test:headed": "node --env-file=.env node_modules/.bin/playwright test -c config/playwright.ui.config.mjs --headed",
    "validate:webui-extensions": "node scripts/validate-webui-extensions.mjs",
    "docs:dev": "vitepress dev docs --port 5174",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "docs:test": "npm run docs:build && playwright test -c config/playwright.docs.config.mjs",
    "docs:test:dev": "npm run docs:build && playwright test -c config/playwright.docs.config.mjs --ui",
    "docs:test:headed": "npm run docs:build && playwright test -c config/playwright.docs.config.mjs --headed"
  },
  "dependencies": {
    "@google/genai": "^1.34.0",
    "@modelcontextprotocol/sdk": "^1.25.1",
    "@tailwindcss/typography": "^0.5.19",
    "express": "^5.2.1",
    "marked": "^17.0.1",
    "openai": "^6.15.0",
    "preact": "^10.28.1",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@anthropic-ai/mcpb": "^2.1.2",
    "@playwright/test": "^1.57.0",
    "@preact/preset-vite": "^2.10.2",
    "@rollup/plugin-alias": "^6.0.0",
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-replace": "^6.0.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@stylistic/eslint-plugin": "^5.6.1",
    "@tailwindcss/vite": "^4.1.18",
    "@testing-library/preact": "^3.2.4",
    "@types/express": "^5.0.6",
    "@types/max-api": "^2.0.3",
    "@types/node": "^25.0.3",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.50.1",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/eslint-plugin": "^1.6.4",
    "chokidar-cli": "^3.0.0",
    "commander": "^14.0.2",
    "eslint": "^9.39.2",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-node": "^0.3.9",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsdoc": "^61.5.0",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-sonarjs": "^3.0.5",
    "happy-dom": "^20.0.11",
    "peggy": "^5.0.6",
    "prettier": "^3.7.4",
    "rollup": "^4.54.0",
    "rollup-plugin-copy": "^3.5.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.0",
    "vite-plugin-singlefile": "^2.3.0",
    "vitepress": "^1.6.4",
    "vitest": "^4.0.16"
  }
}
